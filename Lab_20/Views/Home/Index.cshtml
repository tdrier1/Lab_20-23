<style>
    label {
        
        display: inline-block;
        text-align: center;
        vertical-align: bottom;
        font-family: Verdana;
    }

    labelTwo {
        width: 211px;
        display: inline-block;
        text-align: left;
        vertical-align: bottom;
        font-family: Verdana;
    }

    body {
        background-color: darkorange;
    }
</style>
<html>
<body>
    <form>
        <center>
            <label><h1>Welcome to the Grand Circus Coffee Shop! </h1></label>
            <br />
            <br />
            <img src="~/fonts/grandlogo.jpg" />
            <br />
            <br />
            <font size="4" color="white" font face="verdana">

              
                <a href="/Home/Login">Login</a>
              
                <a href="/Home/Registration">Register</a>
                </font>
                <br />
                <br />
</form>

    <form action="/Home/SearchItems">
        Search by Name:
        <select name="SearchItems">
            @foreach (var element in ViewBag.Names)
            {
                <option value="@element">@element</option>
            }
        </select>
        <input type="submit" value="Submit">
    </form>
    <h3><label>Items List</label></h3>
    <table border="1" style="font-family:Verdana;">
        <tr><th>Name</th><th>Description</th><th>Quantity</th><th>Price</th></tr>
        @if (ViewBag.ItemInfo != null)
            {
                foreach (var element in ViewBag.ItemInfo)
                {
                <tr>
                    <td>@element.Name</td>
                    <td>@element.Description</td>
                    <td>@element.Quantity</td>
                    <td>@element.Price</td>
                </tr>
            }
        }
    </table>
    </form>
    <br />
    <br />
    <font size="3" color="white" font face="verdana">
        <a href="/Home/AdminLogin">Admin Login</a>
        </font>
</body>
</center>
</html>


